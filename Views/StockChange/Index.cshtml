@model IEnumerable<DigitalWarehouse.Models.StockChangeModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Stock history</h1>

<div class="table-responsive">
<table class="table table-hover align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                Change in stock
            </th>
            <th>
                Time of change
            </th>
            <th>
                
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody class="bg-light">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangeAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChangeDate)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm w-md-auto"><i class="bi bi-eye"></i> Details</a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm w-md-auto"><i class="bi bi-trash"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>